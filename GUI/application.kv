<MainManger>:
	ScreenManager:
		id:global_manager

		MDScreen:
			name: 'main'

            MDBoxLayout:

                MDNavigationRail:

					MDNavigationRailItem:
						text: "Плеер"
						icon: "play"
						on_press:
							root.change_main_scenes('player')

					MDNavigationRailItem:
						text: "Очередь"
						icon: "view-list"
						on_press:
							root.change_main_scenes('queue')

					MDNavigationRailItem:
						text: "Плейлисты"
						icon: "playlist-music"
						on_press:
							root.change_main_scenes('playlist')

					MDNavigationRailItem:
						text: "Скачивания"
						icon: "progress-download"
						on_press:
							root.change_main_scenes('download')

					MDNavigationRailItem:
						text: "Настройки"
						icon: "cog"
						on_press:
							root.change_main_scenes('settings')


                ScreenManager:
                    id: screen_manager

					MDScreen:
						name:"player"
						
						MDBoxLayout:
							padding: [60,80]

							MDCard:
								MDGridLayout:
									cols:1
									rows:2

									MDBoxLayout:
										orientation:'vertical'
										MDLabel:
											id:Title
											text:'Title of treack'
											halign:'center'
											size_hint_y:.2
											font_size:30

										MDSeparator:
										MDBoxLayout:
											orientation:'vertical'
											padding: [20, 0]
											MDLabel:
												id:Artist
												text:'Artist of treack'
												size_hint_y:.2
												font_size:25

											MDLabel:
												id:Duration
												text:'Duration of treack'
												size_hint_y:.2
												font_size:25

											MDLabel:
												id:Albom
												text:'Albom of treack'
												size_hint_y:.2
												font_size:25

											MDBoxLayout

									MDGridLayout:
										cols:1
										rows:2
										size_hint_y:.35
										padding: [20, 0]

										MDBoxLayout:
											MDLabel:
												text:'00:00'
												halign: 'center'
												size_hint_x:0.2

											MDSlider:

											MDLabel:
												text:'00:00'
												halign: 'center'
												size_hint_x:0.2

										MDGridLayout:
											cols:1
											rows:2
											size_hint_y:.2

											MDBoxLayout:
												size_hint_y:.3
												MDBoxLayout:

												MDIconButton:
													icon:'skip-previous'
													on_press:
														root.change_image('prev')


												MDIconButton:
													icon:'play'


												MDIconButton:
													icon:'skip-next'
													on_press:
														root.change_image('next')

												MDBoxLayout:

											MDBoxLayout:


								MDBoxLayout:
									FitImage:
										id:albom
										source:'Images/cash.png'



					MDScreen:
						name:"queue"
						MDLabel:
							text:'Queue'

					MDScreen:
						name:"playlist"
						MDLabel:
							text:'Playlist'

					MDScreen:
						name:"download"
						MDLabel:
							text:'Download'

					MDScreen:
						name:"settings"
						MDLabel:
							text:'Settings'

		MDScreen:
			name:'welcome'

			MDScreenManager:
				id: welcome_manger

				MDScreen:
					name: 'frist'

					MDCard:
						padding: [40, 40]
						MDBoxLayout:
							size_hint_x: .5
							padding: [20, 20]
							FitImage:
								size_hint_y: None
								size_hint_x: None
								width: dp(500)
								height: dp(500)
								source: "Images/player.png"
								pos_hint: {'y': 0.3}


						MDBoxLayout:
							orientation:'vertical'
							padding: [40,40]
							MDBoxLayout:
								MDLabel:
									font_size: 30
									text:"YouPlayer mp3 плеер с открытым исходным кодом.\nОн поможет вам слушать ваши любимые треки в оффлайне!\nДавно мучаетесь чтобы скачать трек с вк или soundcould ?\nИли сайты которые вы используете вас не устраивают ?\nТогда попробуйте YP!"

							MDBoxLayout:
								size_hint_y:.1
								MDBoxLayout:
								MDFillRoundFlatIconButton:
									font_size:25
									text:"Ага, понятно, а что дальше?"
									icon:'arrow-right'
									on_press:
										root.ids.welcome_manger.current='second'

				MDScreen:
					name: 'second'

					MDCard:
						padding: [40, 40]
						MDBoxLayout:
							padding: [20, 20]
							size_hint_x: .5
							FitImage:
								size_hint_y: None
								size_hint_x: None
								width: dp(500)
								height: dp(500)
								source: "Images/download_music.png"
								pos_hint: {'y': 0.3}


						MDBoxLayout:
							orientation:'vertical'
							padding: [40,40]
							MDBoxLayout:
								MDLabel:
									font_size: 30
									text:"Скачивай любимые треки со всех плащядок!\n\nSoundColoud\nVk Music\nYT Music\n\nИ другие алтернативныйе сайты, просто укажи ссылку на файл и удобно скачай куда надо!"

							MDBoxLayout:
								size_hint_y:.1
								MDBoxLayout:
								MDFillRoundFlatIconButton:
									font_size:25
									text:"Обязательно попробую, а что может ещё YP?"
									icon:'arrow-right'
									on_press:
										root.ids.welcome_manger.current='third'

				MDScreen:
					name: 'third'

					MDCard:
						padding: [40, 40]
						MDBoxLayout:
							padding: [20, 20]
							size_hint_x: .5
							FitImage:
								size_hint_y: None
								size_hint_x: None
								width: dp(500)
								height: dp(500)
								source: "Images/UI.png"
								pos_hint: {'y': 0.3}


						MDBoxLayout:
							orientation:'vertical'
							padding: [40,40]
							MDBoxLayout:
								MDLabel:
									font_size: 30
									text:"У YP очень простой и понятый дизайн!\n\nПростой и минималистичнй дизайн GUI в связке с понятным UI помогут вам комфортного себя чувствовать.\nКонечно в настройках можно будет поменять цвет и основную тему, ну это так сказать база."

							MDBoxLayout:
								size_hint_y:.1
								MDBoxLayout:
								MDFillRoundFlatIconButton:
									font_size:25
									text:"Круто!"
									icon:'arrow-right'
									on_press:
										root.ids.welcome_manger.current='finis'

				MDScreen:
					name: 'finis'

					MDCard:
						padding: [40, 40]
						MDBoxLayout:
							padding: [20, 20]
							size_hint_x: .5
							FitImage:
								size_hint_y: None
								size_hint_x: None
								width: dp(500)
								height: dp(500)
								source: "Images/cash.png"
								pos_hint: {'y': 0.3}


						MDBoxLayout:
							orientation:'vertical'
							padding: [40,40]
							MDBoxLayout:
								MDLabel:
									font_size: 30
									text:"Ну и на последок хотел бы вам попросить поддержать проект рублем.\n\n 150 рублей мне, а вам часы прослушивания музыки.\nСамо приложение полностью бесплатно, но увы мне приходиться сильно экономить что поддерживать в нем жизнь.\nТак что любая поддержка рублем даст мне понять стоит ли продолжать разработку."

							MDBoxLayout:
								size_hint_y:.1
								MDBoxLayout:

								MDBoxLayout:
									MDFillRoundFlatIconButton:
										font_size:20
										text:"Может потом"
										icon:'timer-sand'
										on_press:
											root.set_new_state()

									MDFillRoundFlatIconButton:
										font_size:25
										text:"Да! С радостью помогу!"
										icon:'checkbox-marked-outline'
										on_press:
											root.open_web_pay()

